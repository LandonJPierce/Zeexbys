@model IEnumerable<Zeexbys.Model.Menu>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/css/StyleOnEm.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="namesHeader">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="descriptionsHeader">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="caloriesHeader">
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th class="pricesHeader">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="lethalityHeader">
                @Html.DisplayNameFor(model => model.Lethality)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                
        <tr>
            <td class="names">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="descriptions">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="calories">
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td class="prices">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="lethality">
                @Html.DisplayFor(modelItem => item.Lethality)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
